<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:TubeSniper.Presentation.Wpf.Common">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Global/Fonts.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="Page.Title" TargetType="{x:Type TextBlock}">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="28" />
    </Style>

    <Style x:Key="Page.Description" TargetType="{x:Type TextBlock}">
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="FontSize" Value="18" />
    </Style>

</ResourceDictionary>
