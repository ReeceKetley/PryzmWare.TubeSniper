<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TubeSniper.Presentation.Wpf"
    xmlns:views="clr-namespace:TubeSniper.Presentation.Wpf.Campaigns.Views"
    xmlns:campaigns="clr-namespace:TubeSniper.Presentation.Wpf.Views.Campaigns">


    <Style TargetType="{x:Type campaigns:CampaignTileView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type campaigns:CampaignTileView}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
